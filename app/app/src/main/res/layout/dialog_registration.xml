<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#BDBDBD">

    <RelativeLayout
        android:layout_width="400dp"
        android:layout_height="270dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        android:background="@color/white">

        <ImageView
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginBottom="5dp"
            android:layout_toLeftOf="@id/txt_tittle"
            android:src="@drawable/ic_baseline_app_registration_24" />

        <TextView
            android:id="@+id/txt_tittle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:text="Dang ky thanh vien"
            android:textColor="@color/mauchu"
            android:textDirection="firstStrong"
            android:textSize="20sp" />
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:id="@+id/textinputlayouthvt"
            android:layout_marginTop="10dp"

            android:layout_below="@id/txt_tittle"
            android:hint="ho va ten:"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/btn_dangki"
           >
            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/edthvt"
                />


        </com.google.android.material.textfield.TextInputLayout>
            <EditText
                android:layout_width="200dp"
                android:layout_height="60dp"
                android:layout_below="@id/textinputlayouthvt"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/btn_dangki"
                android:id="@+id/edtdiachi"
                android:hint="Nhap dia chi"
                />
            <EditText
                android:layout_marginTop="10dp"
                android:layout_width="200dp"
                android:layout_height="60dp"
                android:layout_below="@id/edtdiachi"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/btn_dangki"
                android:id="@+id/edtsdt"
                android:hint="Nhap so dien thoai"
                />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btn_dangki"
                android:layout_marginTop="20dp"
                android:text="Dang ky"
                android:layout_below="@id/txt_tittle"
                android:layout_marginLeft="20dp"
                android:background="@drawable/trongoc"
                />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_13sp"
            android:layout_below="@id/edtsdt"
            android:id="@+id/txt_notificationRegistration"
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true"
            android:textColor="@color/colortien"
            />


    </RelativeLayout>
</RelativeLayout>